{
  "manifest_version": 3,
  "name": "EACG自动连播",
  "version": "1.0",
  "description": "仅在指定网站内（含外部 iframe）监听视频结束后触发下集按钮点击",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["config.js", "content.js"]
    }
  ]
}
